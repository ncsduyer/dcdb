                    <result column="tudtaunitid" property="taunitid" />
                    <result column="tuddealdesc" property="dealdesc" />
                    <result column="tudstatus" property="status" />
                    <result column="tudisdelay" property="isdelay" />
                    <result column="tudpretime" property="pretime" />
                    <result column="tuddelaytime" property="delaytime" />
                    <result column="tudcreatorid" property="creatorid" />
                    <result column="tudcreatetime" property="createtime" />
                    <result column="tudfinishtime" property="finishtime" />
                </collection>
            </collection>

    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, taskid, worktype, assigntime, assignmemo, status, creatorid, createtime, closememo,endtime
    </sql>
    <sql id="AS_Column_List1">
       t.id, t.title,ta.id taid, ta.taskid tataskid, ta.worktype taworktype, ta.assigntime taassigntime, ta.assignmemo taassignmemo, ta.status tastatus, ta.creatorid tacreatorid, ta.createtime tacreatetime, ta.closememo taclosememo,ta.endtime taendtime, CASE when sysdate()>tu.endtime then '已超期' else
        '未超期' end as is_exceed ,u.id uid,u.name uname,wt.title wtitle,e.step esstep
        ,tu.id tuid, tu.tassignid tutassignid, tu.unitid tuunitid,tu.personid tupersonid, tu.endtime tuendtime, tu.requirements turequirements, tu.status tustatus, tu.updatetime tuupdatetime, tu.createtime tucreatetime,c.id cid,c.title ctitle , tud.id tudid, tud.taunitid tudtaunitid, tud.dealdesc tuddealdesc, tud.status tudstatus, tud.isdelay tudisdelay, tud.pretime tudpretime, tud.delaytime tuddelaytime, tud.creatorid tudcreatorid, tud.createtime tudcreatetime, tud.finishtime tudfinishtime
    </sql>
    <select id="selectByManyId" resultMap="ResultMoreMap">
        SELECT <include refid="AS_Column_List1"/>
        FROM
        td_taskassign ta LEFT JOIN td_task t  ON ta.taskid = t.id LEFT JOIN t_tb_work_type wt ON wt.id =
        ta.worktype
        LEFT JOIN t_tb_event_step e ON e.status=ta.status and e.event_type=1 LEFT JOIN sys_user u ON u.id = ta.creatorid LEFT JOIN td_taskassign_unit tu ON tu.tassignid =  ta.id  LEFT JOIN t_tb_company c ON c.id=tu.unitid LEFT JOIN td_taskassign_unitdeal tud ON tud.taunitid=tu.id
        <where>
        ${ew.sqlSegment}
    </where>
    </select>
</mapper>
